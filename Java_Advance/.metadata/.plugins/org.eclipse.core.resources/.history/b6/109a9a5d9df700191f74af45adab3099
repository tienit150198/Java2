package pro03;

public class Book extends ShopItem {
	double weight;

	public Book() {
		super();
		// TODO Auto-generated constructor stub
	}

	public Book(String id, String iName, double iPrice, int iQttt) {
		super(id, iName, iPrice, iQttt);
		// TODO Auto-generated constructor stub
	}

	public Book(double weight, String id, String iName, double iPrice, int iQttt) {
		super(id, iName, iPrice, iQttt);
		this.weight = weight;
	}

	public Book(double weight) {
		super();
		this.weight = weight;
	}

	@Override
	public double getPriceShip() {
		return 0;
	}

	@Override
	public void display() {
		System.out.println("ID: "+ id + " - " + "Name: " + iName + " - "+ "Price: " + iPrice + " - "+ "Weight: " + weight + " - "+ "Number" + iQttt);
	}

	@Override
	public void input() {
		System.out.println("Enter ID: ");
		id = Validate.checkInputString();
		System.out.println("Enter Name: ");
		iName = Validate.checkInputString();
		System.out.println("Enter price: ");
		iPrice = Validate.checkInputDouble();
		System.out.println("Enter weight: ");
		weight = Validate.checkInputInt();
	}

}
